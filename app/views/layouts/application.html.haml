!!!
%html
  %head
    %title Irclone
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body

    %nav
      - if @nick or @channel
        %h1
          - if @nick
            connected as
            %em= @nick
          - if @channel
            on
            %em= @channel.key

    - if flash[:notice]
      .notice= flash.notice
    - if flash[:alert]
      .notice.alert= flash.alert

    = yield

    %hr

    = link_to 'channels', channels_path

    = form_tag disconnect_path do
      = submit_tag 'disconnect'
