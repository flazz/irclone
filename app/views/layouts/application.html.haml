%html
  %head
    %title Irclone
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body

    %nav
      = form_tag disconnect_path do
        = submit_tag 'disconnect'

    - if flash[:notice]
      .notice= flash.notice
    - if flash[:alert]
      .notice.alert= flash.alert

    = yield
